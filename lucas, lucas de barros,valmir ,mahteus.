lista = []

while True:
    opcoes = int(input('''
    digite 1 para adicionar um novo produto:
    digute 2 para excluir um produto da lista:
    digute 3 para imprimir a lista:
    digite 4 para sair: 
    
    '''))

    if opcoes == 1:
        produto = str(input('digite o nome do produto: '))
        lista.append(produto)
        continuar = str(input('aperte enter para continuar ou digite Sair para sair: ')).upper()
        if continuar == '':
            pass
        else:
            break
    
    elif opcoes ==2:
        busca = str(input('qual produto deseja excluir? '))
        if busca in lista:
           i = lista.index(busca)
           lista.pop(i)
           print(f'o {busca} foi excluido com sucesso')
        else:
            print(f'{busca} não cadastrado!')
    
    elif opcoes == 3:
         print(lista)

    elif opcoes == 4:
        break
    else:
        print('opção não encontrada! ')
